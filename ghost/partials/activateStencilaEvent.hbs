{{!-- Dispatches a custom event to the <stencila-state-controller> element, will not work if that element is not present in the default.hbs --}}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        window.dispatchEvent(
            new CustomEvent(
                'stencila-state-dispatch', 
                {   
                    bubbles: true,
                    composed: true,
                    detail: {
                        nodeMarkerState: 'hover-only',
                        {{#if expand}}
                        expandCards: true
                        {{/if}}
                    }
                })
        )

    })
</script>