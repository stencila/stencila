{
  "$schema": "https://stencila.org/meta.schema.json",
  "$id": "https://stencila.org/Reference.schema.json",
  "@id": "stencila:Reference",
  "title": "Reference",
  "extends": [
    "Entity"
  ],
  "category": "works",
  "description": "A reference to a creative work, including books, movies, photographs, software programs, etc.",
  "markdown": {
    "derive": false
  },
  "required": [
    "type"
  ],
  "core": [
    "id",
    "workType",
    "doi",
    "authors",
    "date",
    "title",
    "isPartOf",
    "pageStart",
    "pageEnd",
    "pagination",
    "url"
  ],
  "properties": {
    "type": {
      "@id": "schema:type",
      "description": "The type of this item.",
      "$comment": "This is a special property analogous to JSON-LD's `@type` keyword.\n",
      "type": "string"
    },
    "id": {
      "@id": "schema:id",
      "description": "The identifier for this item.",
      "$comment": "This is a special property analogous to JSON-LD's `@id` keyword.\n",
      "strip": [
        "metadata"
      ],
      "html": {
        "attr": "id"
      },
      "type": "string"
    },
    "workType": {
      "@id": "stencila:workType",
      "description": "The type of `CreativeWork` being referenced(e.g. Article, Book, Dataset).",
      "aliases": [
        "work-type",
        "work_type"
      ],
      "$ref": "CreativeWorkType.schema.json"
    },
    "doi": {
      "@id": "stencila:doi",
      "description": "The Digital Object Identifier (https://doi.org/) of the work being referenced.",
      "type": "string"
    },
    "authors": {
      "@id": "schema:author",
      "description": "The authors of the work.",
      "aliases": [
        "author"
      ],
      "serde": {
        "deserializeWith": "option_one_or_many_string_or_object"
      },
      "type": "array",
      "items": {
        "$ref": "Author.schema.json"
      }
    },
    "date": {
      "@id": "schema:date",
      "description": "Date of first publication.",
      "serde": {
        "deserializeWith": "option_string_or_object"
      },
      "dom": {
        "with": "Date::to_dom_attr"
      },
      "$ref": "Date.schema.json"
    },
    "title": {
      "@id": "schema:headline",
      "description": "The title of the referenced work.",
      "$comment": "An array of inlines (rather than a string) to be consistent with `CreativeWork.title`\nand allow for italicization of species names, math etc.\n",
      "aliases": [
        "headline"
      ],
      "walk": true,
      "dom": {
        "elem": "span"
      },
      "type": "array",
      "items": {
        "$ref": "Inline.schema.json"
      }
    },
    "isPartOf": {
      "@id": "schema:isPartOf",
      "description": "An other `CreativeWork` that the reference is a part of.",
      "aliases": [
        "is-part-of",
        "is_part_of"
      ],
      "$ref": "CreativeWorkVariant.schema.json"
    },
    "pageStart": {
      "@id": "schema:pageStart",
      "description": "The page on which the article starts; for example \"135\" or \"xiii\".",
      "aliases": [
        "page-start",
        "page_start"
      ],
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "string"
        }
      ]
    },
    "pageEnd": {
      "@id": "schema:pageEnd",
      "description": "The page on which the article ends; for example \"138\" or \"xvi\".",
      "aliases": [
        "page-end",
        "page_end"
      ],
      "anyOf": [
        {
          "type": "integer"
        },
        {
          "type": "string"
        }
      ]
    },
    "pagination": {
      "@id": "schema:pagination",
      "description": "Any description of pages that is not separated into pageStart and pageEnd; for example, \"1-6, 9, 55\".",
      "type": "string"
    },
    "url": {
      "@id": "schema:url",
      "description": "The URL of the referenced work.",
      "type": "string",
      "format": "uri"
    }
  }
}