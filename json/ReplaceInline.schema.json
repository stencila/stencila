{
  "$schema": "https://stencila.org/meta.schema.json",
  "$id": "https://stencila.org/ReplaceInline.schema.json",
  "@id": "stencila:ReplaceInline",
  "title": "ReplaceInline",
  "nick": "rpi",
  "extends": [
    "SuggestionInline"
  ],
  "category": "edits",
  "description": "A suggestion to replace some inline content with new inline content.",
  "markdown": {
    "template": "[[replace {{content}}>>{{replacement}}]]"
  },
  "proptest": {},
  "required": [
    "type",
    "content",
    "replacement"
  ],
  "core": [
    "id",
    "suggestionStatus"
  ],
  "properties": {
    "type": {
      "@id": "schema:type",
      "description": "The type of this item.",
      "$comment": "This is a special property analogous to JSON-LD's `@type` keyword.\n",
      "type": "string"
    },
    "id": {
      "@id": "schema:id",
      "description": "The identifier for this item.",
      "$comment": "This is a special property analogous to JSON-LD's `@id` keyword.\n",
      "strip": [
        "metadata"
      ],
      "html": {
        "attr": "id"
      },
      "type": "string"
    },
    "suggestionStatus": {
      "@id": "stencila:suggestionStatus",
      "description": "The status of the suggestion including whether it is proposed, accepted, or rejected.",
      "aliases": [
        "suggestion-status",
        "suggestion_status"
      ],
      "strip": [
        "metadata"
      ],
      "patch": {
        "formats": [
          "md"
        ]
      },
      "$ref": "SuggestionStatus.schema.json"
    },
    "content": {
      "@id": "stencila:content",
      "description": "The content that is suggested to be inserted, modified, replaced, or deleted.",
      "dom": {
        "elem": "span"
      },
      "proptest": {
        "min": {
          "description": "Generate a single fixed text value.",
          "value": "vec![t(\"text\")]"
        },
        "low": {
          "description": "Generate a single arbitrary, non-recursive, inline node",
          "strategy": "vec_inlines_non_recursive(1)"
        },
        "high": {
          "description": "Generate up to two arbitrary, non-recursive, inline nodes",
          "strategy": "vec_inlines_non_recursive(2)"
        },
        "max": {
          "description": "Generate up to four arbitrary, non-recursive, inline nodes",
          "strategy": "vec_inlines_non_recursive(4)"
        }
      },
      "type": "array",
      "items": {
        "$ref": "Inline.schema.json"
      }
    },
    "replacement": {
      "@id": "stencila:replacement",
      "description": "The new replacement inline content.",
      "patch": {
        "formats": [
          "md"
        ]
      },
      "dom": {
        "elem": "span"
      },
      "type": "array",
      "items": {
        "$ref": "Inline.schema.json"
      }
    }
  }
}