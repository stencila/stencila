{
  "$schema": "https://stencila.org/meta.schema.json",
  "$id": "https://stencila.org/Excerpt.schema.json",
  "@id": "stencila:Excerpt",
  "title": "Excerpt",
  "nick": "exc",
  "extends": [
    "Entity"
  ],
  "description": "An excerpt from a `CreativeWork`.",
  "markdown": {
    "derive": false
  },
  "required": [
    "type",
    "source",
    "nodePath",
    "nodeTypes",
    "content"
  ],
  "core": [
    "id"
  ],
  "properties": {
    "type": {
      "@id": "schema:type",
      "description": "The type of this item.",
      "$comment": "This is a special property analogous to JSON-LD's `@type` keyword.\n",
      "type": "string"
    },
    "id": {
      "@id": "schema:id",
      "description": "The identifier for this item.",
      "$comment": "This is a special property analogous to JSON-LD's `@id` keyword.\n",
      "strip": [
        "metadata"
      ],
      "html": {
        "attr": "id"
      },
      "type": "string"
    },
    "source": {
      "@id": "stencila:source",
      "description": "A `Reference` to the `CreativeWork` that the excerpt was taken from.",
      "strip": [
        "metadata"
      ],
      "dom": {
        "elem": "div"
      },
      "$ref": "Reference.schema.json"
    },
    "nodePath": {
      "@id": "stencila:nodePath",
      "description": "The path to the node that was excepted.",
      "aliases": [
        "node-path",
        "node_path"
      ],
      "strip": [
        "metadata"
      ],
      "type": "string"
    },
    "nodeTypes": {
      "@id": "stencila:nodeTypes",
      "description": "The types of the ancestor nodes and the node that was excerpted.",
      "aliases": [
        "node-types",
        "node_types"
      ],
      "strip": [
        "metadata"
      ],
      "type": "string"
    },
    "content": {
      "@id": "stencila:content",
      "description": "The excerpted content.",
      "strip": [
        "content"
      ],
      "dom": {
        "elem": "div"
      },
      "type": "array",
      "items": {
        "$ref": "Block.schema.json"
      }
    }
  }
}