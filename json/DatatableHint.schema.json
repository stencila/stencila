{
  "$schema": "https://stencila.org/meta.schema.json",
  "$id": "https://stencila.org/DatatableHint.schema.json",
  "@id": "stencila:DatatableHint",
  "title": "DatatableHint",
  "nick": "dth",
  "extends": [
    "Entity"
  ],
  "category": "data",
  "description": "A hint to the structure of a table of data.",
  "required": [
    "type",
    "rows",
    "columns"
  ],
  "core": [
    "id"
  ],
  "properties": {
    "type": {
      "@id": "schema:type",
      "description": "The type of this item.",
      "$comment": "This is a special property analogous to JSON-LD's `@type` keyword.\n",
      "type": "string"
    },
    "id": {
      "@id": "schema:id",
      "description": "The identifier for this item.",
      "$comment": "This is a special property analogous to JSON-LD's `@id` keyword.\n",
      "strip": [
        "metadata"
      ],
      "html": {
        "attr": "id"
      },
      "jats": {
        "attr": "id"
      },
      "type": "string"
    },
    "rows": {
      "@id": "stencila:rows",
      "description": "The number of rows of data.",
      "type": "integer",
      "minimum": 0.0
    },
    "columns": {
      "@id": "stencila:columns",
      "description": "A hint for each column of data.",
      "aliases": [
        "column"
      ],
      "type": "array",
      "items": {
        "$ref": "DatatableColumnHint.schema.json"
      }
    }
  }
}