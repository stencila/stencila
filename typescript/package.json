{
  "name": "@stencila/types",
  "version": "v2.0.0-alpha.9",
  "description": "JavaScript classes and TypeScript types for the Stencila Schema",
  "license": "Apache-2.0",
  "author": "Nokome Bentley <nokome@stencila.io>",
  "bugs": {
    "url": "https://github.com/stencila/stencila/issues"
  },
  "homepage": "https://github.com/stencila/stencila/tree/main/typescript#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/stencila.git"
  },
  "keywords": [
    "types",
    "programmable",
    "executable",
    "reproducible",
    "interactive",
    "documents"
  ],
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "fix": "eslint --fix 'src/**/*'",
    "lint": "eslint 'src/**/*'",
    "test": "jest",
    "build": "tsc -p tsconfig-build.json",
    "check": "attw --pack . && publint"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.11.0",
    "@types/jest": "29.5.5",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "eslint": "8.50.0",
    "jest": "29.7.0",
    "publint": "0.2.2",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  }
}
