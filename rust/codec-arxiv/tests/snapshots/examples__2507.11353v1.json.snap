        {
          "type": "MathBlock",
          "code": {
            "string": "C_{i}(\\mathbf{P},P_{E},\\mathbf{q}_{i},E_{i},L_{i})=\\sum^{N}_{j=1}P_{j}q_{ij}+P%\n_{E}E_{i}+W_{i}(L_{i}),"
