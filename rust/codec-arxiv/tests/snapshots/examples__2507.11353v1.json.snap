            {
              "type": "MathInline",
              "code": {
                "string": "{\\mathcal{L}}"
              },
              "mathLanguage": "latex",
              "mathml": "redacted"
            },
            {
              "type": "Text",
              "value": {
                "string": " as:"
              }
            }
          ]
        },
        {
          "type": "MathBlock",
          "code": {
            "string": "{\\mathcal{L}}(\\mathbf{P},{\\mathcal{Q}},\\mathbf{E},\\mathbf{L})=\\sum^{N}_{i=1}%\n\\ell_{i}(\\mathbf{P},\\mathbf{q}_{i},E_{i},L_{i}),"
          },
          "mathLanguage": "latex",
          "mathml": "redacted"
        },
        {
          "type": "Paragraph",
          "content": [
            {
              "type": "Text",
              "value": {
                "string": "where the functions "
              }
            },
            {
              "type": "MathInline",
              "code": {
                "string": "\\ell_{i}:\\mathbb{R}^{N}_{\\geq 0}\\times\\mathbb{R}^{N+2}_{\\geq 0}\\to\\mathbb{R}"
