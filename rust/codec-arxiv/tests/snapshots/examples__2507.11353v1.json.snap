        },
        {
          "type": "MathBlock",
          "code": {
            "string": "\\ell_{i}(\\mathbf{P},\\mathbf{q}_{i},E_{i},L_{i})\\to-\\infty,\\quad\\text{as}\\quad%\n\\lVert(\\mathbf{q}_{i},E_{i},L_{i})\\rVert\\to\\infty."
          },
          "mathLanguage": "latex",
          "mathml": "redacted"
        },
        {
          "type": "Paragraph",
          "content": [
            {
              "type": "Text",
              "value": {
                "string": "This implies that"
              }
            }
          ]
        },
        {
          "type": "MathBlock",
          "code": {
            "string": "{\\mathcal{L}}(\\mathbf{P},{\\mathcal{Q}},\\mathbf{E},\\mathbf{L})\\to-\\infty,\\quad%\n\\text{as}\\quad\\lVert({\\mathcal{Q}},E,L)\\rVert\\to\\infty."
          },
          "mathLanguage": "latex",
          "mathml": "redacted"
        },
        {
