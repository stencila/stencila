            },
            {
              "type": "MathBlock",
              "code": {
                "string": "\\sum^{N}_{j=1}\\int_{B}\\int_{\\overline{{\\mathcal{O}}}_{j}}e^{-rt}\\frac{\\partial%\n}{\\partial P_{i}}\\overline{\\Pi}_{j}(\\mathbf{v}^{h}(t),x)\\,m^{j,*}_{t}(dx)dt=o(%\n1)."
