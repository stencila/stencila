            },
            {
              "type": "MathInline",
              "code": {
                "string": "\\mathbf{P}"
              },
              "mathLanguage": "latex",
              "mathml": "redacted"
            },
            {
              "type": "Text",
              "value": {
                "string": ". Consequently, the Lagrangian "
              }
            },
            {
              "type": "MathInline",
              "code": {
                "string": "{\\mathcal{L}}"
              },
              "mathLanguage": "latex",
              "mathml": "redacted"
            },
            {
              "type": "Text",
              "value": {
                "string": " satisfies the necessary continuity properties: it is upper semi-continuous with respect to the inputs and lower semi-continuous with respect to the prices."
              }
            }
          ]
        },
        {
          "type": "Paragraph",
          "content": [
            {
              "type": "Text",
              "value": {
                "string": "Furthermore, since "
              }
            },
            {
              "type": "MathInline",
              "code": {
                "string": "F_{i}"
              },
              "mathLanguage": "latex",
              "mathml": "redacted"
            },
            {
              "type": "Text",
              "value": {
                "string": " and "
