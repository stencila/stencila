        {
          "type": "Claim",
          "claimType": "Theorem",
          "label": "4.5",
          "content": [
            {
              "type": "Paragraph",
              "content": [
                {
                  "type": "Text",
                  "value": {
                    "string": "The topology "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "\\tau_{p}"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": " generalizes the classical weak topology by allowing test functions with polynomial growth. Specifically, a sequence "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "(\\nu^{n})_{n\\geq 1}\\subset{\\mathcal{M}}_{p}([0,T]\\times\\overline{{\\mathcal{O}}})"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": " converges to a limit "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "\\nu"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": " in the topology "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "\\tau_{p}"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": " if"
                  }
                }
              ]
            },
            {
              "type": "MathBlock",
              "code": {
                "string": "\\int_{0}^{T}\\int_{\\overline{{\\mathcal{O}}}}f(t,x)\\,\\nu^{n}(dt,dx)%\n\\longrightarrow\\int_{0}^{T}\\int_{\\overline{{\\mathcal{O}}}}f(t,x)\\,\\nu(dt,dx),%\n\\quad\\text{as }n\\to\\infty,"
              },
              "mathLanguage": "latex",
              "mathml": "redacted"
            },
            {
              "type": "Paragraph",
              "content": [
                {
                  "type": "Text",
                  "value": {
                    "string": "for all test functions "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "f\\colon[0,T]\\times\\overline{{\\mathcal{O}}}\\to\\mathbb{R}"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": " that are measurable in "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "t"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": ", continuous in "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "x"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": ", and satisfy a "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "p"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": "-growth condition of the form"
                  }
                }
              ]
            },
            {
              "type": "MathBlock",
              "code": {
                "string": "|f(t,x)|\\leq C(1+x^{p}),\\quad\\text{for all }(t,x)\\in[0,T]\\times\\overline{{%\n\\mathcal{O}}},"
              },
              "mathLanguage": "latex",
              "mathml": "redacted"
            },
            {
              "type": "Paragraph",
              "content": [
                {
                  "type": "Text",
                  "value": {
                    "string": "for some constant "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "C&gt;0"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": "."
                  }
                }
              ]
            },
            {
              "type": "Paragraph",
              "content": [
                {
                  "type": "Text",
                  "value": {
                    "string": "The space "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
                    "string": "{\\mathcal{V}}_{p}(\\overline{{\\mathcal{O}}})"
                  },
                  "mathLanguage": "latex",
                  "mathml": "redacted"
                },
                {
                  "type": "Text",
                  "value": {
                    "string": ", endowed with the topology "
                  }
                },
                {
                  "type": "MathInline",
                  "code": {
