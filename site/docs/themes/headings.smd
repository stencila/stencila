  /* h1-h2: Bold roman */
  --heading-h1-font-style: normal;
  --heading-h2-font-style: normal;
  --heading-h2-font-variant: small-caps;
  --heading-h2-letter-spacing: 0.05em; /* Small-caps need extra tracking */

  /* h3: Bold roman */
