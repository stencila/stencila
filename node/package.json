{
  "name": "@stencila/node",
  "version": "2.0.0-alpha.14",
  "license": "Apache-2.0",
  "files": [
    "bindings.*",
    "install.*",
    "dist",
    "src/*.mts"
  ],
  "main": "./dist/lib.mjs",
  "types": "./dist/lib.d.ts",
  "scripts": {
    "fix": "eslint --fix '**/*.mts'",
    "lint": "eslint '**/*.mts'",
    "build:addon": "napi build --platform --release --js false --dts bindings.d.cts && npm run compress",
    "build:debug": "napi build --js false --dts bindings.d.cts && npm run build:dist",
    "build:dist": "tsc -p tsconfig-build.json",
    "check": "attw --pack . && publint",
    "compress": "node compress.cjs",
    "install": "node install.cjs",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest"
  },
  "engines": {
    "node": ">= 10"
  },
  "napi": {
    "name": "stencila",
    "triples": {}
  },
  "jest": {
    "testMatch": [
      "**/*.test.mjs"
    ],
    "moduleFileExtensions": [
      "js",
      "mjs"
    ]
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.11.0",
    "@napi-rs/cli": "2.16.3",
    "@types/jest": "29.5.5",
    "@types/tmp": "0.2.4",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "eslint": "8.51.0",
    "jest": "29.7.0",
    "publint": "0.2.3",
    "tmp": "0.2.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@stencila/types": "*"
  }
}
