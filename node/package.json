{
  "name": "@stencila/node",
  "version": "2.0.0-alpha.21",
  "description": "Stencila SDK for Node.js",
  "license": "Apache-2.0",
  "author": "Nokome Bentley <nokome@stencila.io>",
  "bugs": {
    "url": "https://github.com/stencila/stencila/issues"
  },
  "homepage": "https://github.com/stencila/stencila/tree/main/node#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/stencila.git"
  },
  "keywords": [
    "node",
    "programmable",
    "executable",
    "reproducible",
    "interactive",
    "documents"
  ],
  "type": "module",
  "files": [
    "dist",
    "install.*",
    "src/*.ts",
    "src/*.js"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "scripts": {
    "fix": "eslint --fix '**/*.ts'",
    "lint": "eslint '**/*.ts'",
    "build:debug": "napi build --js false --dts src/bindings.d.ts",
    "build:addon": "napi build --platform --release --js false --dts src/bindings.d.ts && npm run compress",
    "build:dist": "tsup --external ../stencila.node",
    "pubcheck": "attw --pack . && publint",
    "compress": "node compress.cjs",
    "install": "node install.cjs",
    "test": "jest",
    "cover": "npm test -- --collectCoverage --coverageReports=cobertura",
    "bench": "tsup --entry.index src/bench.ts --external ../stencila.node --format cjs --out-dir bench --clean && node bench/index.cjs | tee bench/results.txt",
    "unused": "depcheck --quiet --ignores @types/jest "
  },
  "engines": {
    "node": ">= 10"
  },
  "napi": {
    "name": "stencila",
    "triples": {}
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "splitting": false,
    "dts": true,
    "sourcemap": true,
    "clean": true
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.13.0",
    "@napi-rs/cli": "2.16.5",
    "@types/benchmark": "2.1.4",
    "@types/jest": "29.5.7",
    "@types/tmp": "0.2.5",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "benchmark": "2.1.4",
    "depcheck": "1.4.7",
    "eslint": "8.52.0",
    "jest": "29.7.0",
    "publint": "0.2.5",
    "tmp": "0.2.1",
    "ts-jest": "29.1.1",
    "tsup": "7.2.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@stencila/types": "2.0.0-alpha.21"
  }
}
