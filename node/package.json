{
  "name": "@stencila/node",
  "version": "0.0.0",
  "main": "main.js",
  "types": "main.d.ts",
  "license": "Apache-2.0",
  "scripts": {
    "fix": "eslint --fix '*.ts'",
    "lint": "eslint '*.ts'",
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release && tsc",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "jest",
    "universal": "napi universal",
    "version": "napi version"
  },
  "engines": {
    "node": ">= 10"
  },
  "napi": {
    "name": "node",
    "triples": {}
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts-esm",
    "testTimeout": 180000,
    "transform": {
      "\\.(j|t)s$": [
        "ts-jest",
        {
          "tsconfig": {
            "allowJs": true
          }
        }
      ]
    },
    "transformIgnorePatterns": ["main\\.js$"]
  },
  "packageManager": "yarn@3.6.3",
  "devDependencies": {
    "@napi-rs/cli": "2.16.3",
    "@types/jest": "29.5.5",
    "@types/tmp": "0.2.4",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "eslint": "8.50.0",
    "jest": "29.7.0",
    "tmp": "0.2.1",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "optionalDependencies": {
    "@stencila/node-darwin-x64": "0.0.0",
    "@stencila/node-linux-x64-gnu": "0.0.0",
    "@stencila/node-win32-x64-msvc": "0.0.0"
  },
  "dependencies": {
    "@stencila/types": "../typescript"
  }
}
