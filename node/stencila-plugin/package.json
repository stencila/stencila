{
  "name": "@stencila/plugin",
  "version": "2.0.0-alpha.1",
  "description": "Build Stencila Plugins using Node.js",
  "license": "Apache-2.0",
  "author": "Nokome Bentley <nokome@stencila.io>",
  "bugs": {
    "url": "https://github.com/stencila/stencila/issues"
  },
  "homepage": "https://github.com/stencila/stencila/tree/main/node/stencila-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/stencila.git"
  },
  "keywords": [
    "node",
    "plugin",
    "programmable",
    "executable",
    "reproducible",
    "interactive",
    "documents"
  ],
  "type": "module",
  "files": [
    "dist",
    "src/*.ts"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "scripts": {
    "fix": "eslint --fix 'src/**/*.ts' && prettier --write .",
    "lint": "eslint 'src/**/*.ts' && prettier --check .",
    "test": "jest",
    "cover": "npm test -- --collectCoverage --coverageReports=cobertura",
    "build": "tsup",
    "pubcheck": "attw --pack . && publint",
    "unused": "depcheck --quiet --ignore-patterns '.eslintrc*'"
  },
  "engines": {
    "node": ">=16"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "splitting": false,
    "dts": true,
    "sourcemap": true,
    "clean": true
  },
  "devDependencies": {
    "@napi-rs/cli": "2.18.0"
  },
  "dependencies": {
    "@stencila/types": "2.0.0-alpha.25"
  }
}
