  "config": {
    "forge": "./forge.config.js"
  },
  "browserslist": [
    "Electron"
  ],
  "eslintConfig": {
    "root": true,
    "extends": "@stencila/eslint-config-stencil",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    }
  },
  "prettier": "@stencila/dev-config/prettier-config.json"
